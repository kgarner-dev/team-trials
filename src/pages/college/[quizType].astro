---
import Layout from '../../layouts/Layout.astro';
import Quiz from '../../components/Quiz';

export async function getStaticPaths() {
    return [
        { params: { quizType: "sec" } },
        { params: { quizType: "aac" } },
        { params: { quizType: "acc" } },
        { params: { quizType: "big10" } },
        { params: { quizType: "big12" } },
        { params: { quizType: "cusa" } },
        { params: { quizType: "mwc" } },
        { params: { quizType: "pac12" } },
        { params: { quizType: "sunbelt" } },
        { params: { quizType: "mac" } },
        { params: { quizType: "independents" } }
    ];
}

const quizMap: Record<string, string> = {
    "sec": "SEC",
    "aac": "AAC",
    "acc": "ACC",
    "big10": "Big Ten",
    "big12": "Big 12",
    "cusa": "Conference USA",
    "mwc": "Mountain West",
    "pac12": "Pac-12",
    "sunbelt": "Sun Belt",
    "mac": "MAC",
    "independents": "FBS Independents"
};

const { quizType } = Astro.params;
---
<Layout title={quizMap[quizType]}>
    <Quiz 
        conference={ quizType } 
        classification="fbs" 
        client:load 
    />
</Layout>