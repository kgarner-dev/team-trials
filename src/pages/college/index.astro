<style lang="scss">
	@use "../../components/global.scss";

	.container {
		max-width: 1400px;
		margin: 0 auto;
		min-height: 80vh;
		padding: 20px;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.category {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: auto;
		gap: 10px;

		h2 {
			grid-column: auto / span 4;
			font-size: clamp(1.25rem, 2.55vw, 2.55rem);
			margin: 0;
		}

		p, .link {
			grid-column: auto / span 4;
		}

		p {
			margin: 5px 0;
		}

		.link {
			margin: 0 0 20px;
		}
	}

</style>