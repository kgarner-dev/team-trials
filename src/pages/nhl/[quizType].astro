---
import Layout from '../../layouts/Layout.astro';
import Quiz from '../../components/Quiz';

export async function getStaticPaths() {
    return [
        { params: { quizType: "eastern" } },
        { params: { quizType: "western" } }
    ];
}

const quizMap: Record<string, string> = {
    "eastern": "Eastern",
    "western": "Western",
};

const { quizType } = Astro.params;
---
<Layout title={quizMap[quizType]}>
    <Quiz 
        conference={quizType} 
        classification="nhl"
        client:load 
    />
</Layout>